<%= form_for @user do |f| %>
  <%= f.label :username, 'Your username here:' %>
  <%= f.text_field :username, value: 'superuser' %>
  <br>

  <%= f.label :email, 'Email:' %>
  <%= f.email_field :email, placeholder: 'foo@bar.com' %>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.submit %>
<% end %>